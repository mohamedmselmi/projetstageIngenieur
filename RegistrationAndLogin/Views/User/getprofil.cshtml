@model List<RegistrationAndLogin.Models.Users>
@{
    ViewBag.Title = "getprofil";

}



@using RegistrationAndLogin.Models;
<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @foreach (var item in Model)
                            {
                                if (@item.EmailID == @User.Identity.Name.ToString())
                                {

                                    <img src="@Url.Content("~/Fichier/" + @item.IMAGE_USER)" width="150" height="150" />



                                    <div class="mt-3">
                                        <h4>@item.FirstName @item.LastName</h4>
                                        <p class="text-secondary mb-1">@item.numtelephone</p>
                                        <p class="text-muted font-size-sm">@item.EmailID</p>


                                        <a href="@Url.Action("modifImageProfilAdmin", new { item.IdUser, item.FirstName, item.LastName, item.DateOfBirth, item.EmailID,item.numtelephone,item.IsEmailVerified,item.URL_IMAGE_USER,item.IMAGE_USER })">
                                            <i class="btn btn-success">update image</i>
                                        </a>


                                    </div>

                                }
                            }
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    if (@item.EmailID == @User.Identity.Name.ToString())
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nom</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.FirstName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Prenom</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.LastName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Date naissance</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.DateOfBirth.ToString("yyyy-MM-dd")
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.EmailID
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @item.numtelephone
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a href="@Url.Action("modifAdminProfil", new { item.IdUser, item.FirstName, item.LastName, item.DateOfBirth, item.EmailID,item.numtelephone,item.IsEmailVerified })">
                                            <i class="btn btn-success">update</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }



            </div>
        </div>

    </div>
</div>
<style>
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>