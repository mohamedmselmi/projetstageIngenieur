                                <div class="col-xs-12 col-sm-6" enctype="multipart/form-data">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>

                                        @Html.EditorFor(x => x.URL_IMAGE_USER, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
